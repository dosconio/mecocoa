
%macro EnterCo16 0
PointReal16:
	SIDT [INTTBL_8632]
	LIDT [INTTBL_8616]
	MOV EAX, CR0
	AND EAX, 0x7FFFFFFE
	MOV CR0, EAX
	JMP WORD 0:PointReal16_switch_CS
PointReal16_switch_CS:
	XOR AX, AX
	MOV SS, AX
	MOV DS, AX
	MOV ES, AX
	MOV FS, AX
	MOV GS, AX
	Addr20Disable
%endmacro

%macro LoadDataSegs 1
	MOV EAX, %1
	MOV DS, EAX
	MOV ES, EAX
	MOV FS, EAX
	MOV GS, EAX
	MOV SS, EAX
%endmacro
